.post
  padding: 2rem;
  margin-bottom: 2rem;

.post-thumbnail
  text-align: center;
  margin-bottom: 1.5rem;
  margin: 0 auto 1.5rem;

.content
  &:not(:last-child)
    margin-bottom: 4rem;

  h2
    margin-bottom: 1em;
    text-align: center;
    line-height: 1.618;
    border-top: 1px solid alpha(color-text, 0.75);
    border-bottom: 1px solid alpha(color-text, 0.75);

  h3
    margin-bottom: 1em;
    &:not(:first-child)
      margin-top: 2em;

  p
    line-height: 200%;

  strong
    background: linear-gradient(rgba(0, 0, 0, 0) 61%, #e9f1f8 60%, #e9f1f8 0%);

  img
    max-width: 100%;

  code
    color: #2f3b4c;
    border-radius: .25rem;

  a[rel=external]::after
    content: "\f08e";
    font-family: "FontAwesome";
    margin-left: 0.25em;
    margin-right: 0.25em;
    font-size: 0.75rem;
    text-decoration: none !important;
